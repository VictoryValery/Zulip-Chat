<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MessageNormal" parent="">
        <item name="android:font">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MessageNormalName" parent="MessageNormal">
        <item name="android:textColor">@color/green_main</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="MessageNormalText" parent="MessageNormal">
        <item name="android:textColor">@color/text_light_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:breakStrategy">simple</item>
        <item name="singleLine">false</item>
    </style>

    <style name="EditTextStyle" parent="MessageNormal">
        <item name="android:textColor">@color/text_dark_gray</item>
        <item name="android:editTextColor">@color/text_dark_gray</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DateSeparator" parent="">
        <item name="android:font">@font/inter_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/text_date_separator</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TopicSeparator" parent="">
        <item name="android:font">@font/inter_light</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/text_date_separator</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EmojiItemHolderStyle" parent="">
        <item name="android:textColor">@color/background_not_selected</item>
        <item name="android:textSize">40sp</item>
    </style>

    <style name="TitleToolbarStyle" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ProfileNameStyle" parent="">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
        <item name="android:font">@font/inter_medium</item>
    </style>

    <style name="ProfileStatusStyle" parent="MessageNormal">
        <item name="android:textColor">@color/text_profile_status</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProfileWebstatusStyle" parent="MessageNormal">
        <item name="android:textColor">@color/profile_offline</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LogoutButtonStyle" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/button_logout</item>
    </style>

    <style name="UserHolderNameStyle" parent="MessageNormal">
        <item name="android:textColor">@color/user_holder_name</item>
        <item name="android:textSize">22sp</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="UserHolderEmailStyle" parent="MessageNormal">
        <item name="android:textColor">@color/user_holder_email</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="StreamTitleStyle" parent="">
        <item name="android:font">@font/inter_medium</item>
        <item name="android:textColor">@color/user_holder_name</item>
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="singleLine">true</item>
    </style>

    <style name="TopicTitleStyle" parent="StreamTitleStyle">
        <item name="android:fontFamily">@font/inter_ex_light</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TabsTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="CustomEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/text_dark_gray</item>
        <item name="colorControlActivated">@color/text_dark_gray</item>
        <item name="colorControlHighlight">@color/text_dark_gray</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/background_toolbar_grey</item>
        <item name="colorAccent">@color/green_main</item>
        <item name="android:textColorPrimary">@color/green_main</item>
        <item name="android:textColor">@color/green_main</item>
        <item name="colorButtonNormal">@color/green_main</item>
        <item name="buttonBarButtonStyle">@style/CustomButtonBarButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/CustomButtonBarNegativeButtonStyle</item>
    </style>

    <style name="CustomButtonBarButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/green_main</item>
    </style>

    <style name="CustomButtonBarNegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/green_main</item>
    </style>

</resources>