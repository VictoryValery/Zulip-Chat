<resources>
    <!-- Base application theme. -->
    <style name="Theme.TFSProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background_dark_gray</item>
        <item name="colorPrimaryVariant">@color/green_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_main</item>
        <item name="colorSecondaryVariant">@color/green_main</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background_toolbar_grey</item>
        <item name="android:navigationBarColor">@color/background_toolbar_grey</item>
        <item name="android:colorBackground">@color/background</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize50pct" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.CornerSize15pct" parent="">
        <item name="cornerSize">15%</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">@color/text_light_gray</item>
        <item name="android:textSize">24sp</item>
        <item name="android:font">@font/inter_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textSize">20sp</item>
        <item name="titleTextColor">@color/text_dark_gray</item>
        <item name="android:textColorPrimary">@color/text_dark_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="backgroundColor">@color/background_not_selected</item>
    </style>

    <style name="ColorTranslucentTheme" parent="Theme.TFSProject">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="elevation">0dp</item>
    </style>

</resources>

