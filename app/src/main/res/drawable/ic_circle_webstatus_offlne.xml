<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="oval">
            <gradient
                android:angle="315"
                android:endColor="@color/background"
                android:startColor="#80505050"
                android:type="linear" />
            <size
                android:width="17dp"
                android:height="17dp" />
        </shape>
    </item>

    <item android:gravity="center">
        <shape android:shape="oval">
            <solid android:color="@color/white" />
            <size
                android:width="15dp"
                android:height="15dp" />
        </shape>
    </item>

</layer-list>
