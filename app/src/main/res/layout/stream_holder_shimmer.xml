<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/stream_holder_height"
    android:background="@color/background"
    android:focusable="true">

    <ImageView
        android:id="@+id/stream_title"
        android:layout_width="@dimen/dim_0dp"
        android:layout_height="@dimen/stream_title_shimmer_height"
        android:layout_marginStart="@dimen/stream_title_margin_start"
        android:layout_marginEnd="@dimen/basic_margin"
        android:background="@drawable/shimmer_back"
        android:contentDescription="@string/shimmer_item_content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stream_topics"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/stream_topics"
        android:layout_width="@dimen/stream_topics_button_shimmer"
        android:layout_height="@dimen/stream_topics_button_shimmer"
        android:layout_marginEnd="@dimen/stream_ic_margin_end"
        android:contentDescription="@string/shimmer_item_content_description"
        android:src="@drawable/shimmer_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height"
        android:background="@color/text_dark_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>