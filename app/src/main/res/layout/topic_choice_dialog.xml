<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/topic_choice_dialog_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/stream_holder_height"
        android:background="@color/background_toolbar_grey"
        android:hint="@string/enter_topic"
        android:maxLength="60"
        android:paddingVertical="@dimen/basic_indent"
        android:paddingStart="@dimen/bottom_indent"
        android:paddingEnd="@dimen/basic_indent"
        android:textColor="@color/text_dark_gray"
        android:textColorHint="@color/text_dark_gray"
        android:visibility="gone" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/topic_choice_dialog_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

</LinearLayout>

